<UserControl x:Class="CactusPie.MapLocation.Minimap.Controls.BoundSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CactusPie.MapLocation.Minimap.Controls"
             mc:Ignorable="d"
             IsEnabled="False"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Name="BoundControlsStackPanel" Orientation="Horizontal" Margin="0 5 0 5">
        <Button Name="AddNewBoundButton" Width="100" Height="30" Margin="0 0 5 0" Click="AddNewBoundButton_OnClick">Add bound</Button>
        <Button Name="SaveBoundButton" Width="100" Height="30" Margin="0 0 5 0" Click="SaveBoundButton_OnClick">Save bound</Button>
        <Label>Bound:</Label>
        <ComboBox Grid.Column="0" Name="BoundComboBox" Margin="5 0 5 0" SelectedValuePath="BoundName"
                  Width="200" DisplayMemberPath="BoundDisplayName" SelectionChanged="BoundComboBox_OnSelectionChanged">
        </ComboBox>
        <Button Name="DeleteBound" Width="100" Height="30" Margin="0 0 5 0" Click="DeleteBound_OnClick">Delete bound</Button>
    </StackPanel>
</UserControl>